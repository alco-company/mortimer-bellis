<tr class="gap-x-6 py-5">
  <%= render_text_column field: link_to(employee.name, employee_url(employee)), table: :row, css: "truncate mort-link-primary" %>
  <%= render_text_column field: link_to(employee.team.name, team_url(employee.team)), table: :row, css: "truncate mort-link-primary" %>
  <%= render_text_column field: employee.locale, table: :row, css: "hidden md:block truncate" %>
  <%= render_text_column field: employee.time_zone, table: :row, css: "hidden md:block truncate" %>
  <%= render_date_column field: employee.updated_at, table: :row, css: "hidden lg:block" %>
</tr>
