  <%= render_text_column field: link_to(employee.team.name, team_url(employee.team)), table: :row, css: "truncate mort-link-primary" %>
  <%= render_boolean_column field: employee.punching_absence, table: :row, css: "text-right" %>
  <%= render_text_column field: employee.locale, table: :row, css: " truncate" %>
  <%= render_text_column field: employee.time_zone, table: :row, css: " truncate" %>
  <%= render_date_column field: employee.updated_at, table: :row, css: "" %>
</tr>
