<li id="<%= dom_id setting %>"  class="flex justify-between gap-x-6 py-5">
  <div class="flex min-w-0 gap-x-4">
    <!-- TODO add mugshots for settings <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt=""> -->
    <div class="min-w-0 flex">
      <p class="text-sm font-semibold leading-6 text-gray-900">
        <%= show_resource_link(resource: setting) %> 
        <% if global_queries? Current.user %>
          <span class="text-xs"><%= show_resource_link(resource: setting.tenant) %> </span>
        <% end %>
      </p>
      <p class="flex text-xs leading-5 text-gray-500">
        <%= setting.value %>
      </p>
    </div>
  </div>
  <div class="flex shrink-0 items-center gap-x-6">
    <div class="hidden sm:flex sm:flex-col sm:items-end">
      <p class="text-sm leading-6 text-gray-900"><%= setting.setable_type %> </p>
      <p class="mt-1 text-xs leading-5 text-gray-500"><%= I18n.t("last_update")%> <time datetime="<%= setting.updated_at %>"><%= time_ago_in_words setting.updated_at %> <%= I18n.t("ago") %></time></p>
    </div>
    <%= render_contextmenu resource: setting, cls: "relative flex-none", turbo_frame: "form", resource_class: Setting, alter: true, links: [ edit_setting_url(setting), setting_url(setting) ] %>
  </div>
</li>
