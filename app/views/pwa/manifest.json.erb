    { "src": "<%= image_url("mortimer_maskable_icon_x72.png") %>",   "type": "image/png", "purpose": "maskable", "sizes": "72x72"  },
    { "src": "<%= image_url("mortimer_maskable_icon_x96.png") %>",   "type": "image/png", "purpose": "maskable", "sizes": "96x96"  },
    { "src": "<%= image_url("mortimer_maskable_icon_x128.png") %>",  "type": "image/png", "purpose": "maskable", "sizes": "128x128"  },
    { "src": "<%= image_url("mortimer_maskable_icon_x192.png") %>",  "type": "image/png", "purpose": "maskable", "sizes": "192x192"  },
    { "src": "<%= image_url("mortimer_maskable_icon_x384.png") %>",  "type": "image/png", "purpose": "maskable", "sizes": "384x384"  },
    { "src": "<%= image_url("mortimer_maskable_icon_x512.png") %>",  "type": "image/png", "purpose": "maskable", "sizes": "512x512"  }
