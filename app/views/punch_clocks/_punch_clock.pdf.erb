<tr class="flex gap-x-6 py-5">
  <%= render_text_column value: link_to(punch_clock.name, punch_clock_url(punch_clock)), table: :head, css: "truncate mort-link-primary" %>
  <%= render_text_column value: link_to(punch_clock.location.name, location_url(punch_clock.location)), table: :head, css: "truncate  mort-link-primary" %>
  <%= render_text_column value: punch_clock.ip_addr, table: :head, css: " text-right" %>
  <%= render_text_column value: punch_clock.locale, table: :head, css: " truncate" %>
  <%= render_text_column value: punch_clock.time_zone, table: :head, css: " truncate" %>
  <%= render_datetime_column value: punch_clock.updated_at, table: :head, css: "" %>
</tr>
