<div id="<%= dom_id block %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Document:</strong>
    <%= block.document_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Parent:</strong>
    <%= block.parent_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Type:</strong>
    <%= block.type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Data:</strong>
    <%= block.data %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Position:</strong>
    <%= block.position %>
  </div>
</div>
