<li id="<%= dom_id punch_card %>" class="flex items-center justify-between gap-x-6 py-5">
  <div class="min-w-0 w-full columns-2 md:columns-4 lg:columns-6">
    <%= render_text_column value: link_to(punch_card.user.name, employee_url(punch_card.user)), css: "truncate mort-link-primary"  do |value| %>
      <%= value %>
      <% if global_queries? Current.user %>
        <p class="text-xs"><%=  link_to punch_card.tenant.name, punch_card.tenant %> </p>
      <% end %>
    <% end %>
    <%= render_text_column value: link_to(punch_card.work_date, punch_card_url(punch_card)), css: "truncate  mort-link-primary" %>
    <%= render_text_column value: show_work_minutes(punch_card), css: "hidden md:block text-right" %>
    <%= render_text_column value: punch_card.break_minutes, css: "hidden md:block truncate" %>
    <%= render_text_column value: punch_card.ot_minutes, css: "hidden lg:block truncate" %>
    <%= render_datetime_column value: punch_card.updated_at, css: "hidden lg:block" %>
  </div>
  <div class="flex flex-none items-center gap-x-4 ">
<!--    <a href="<%#= product_stock_items_url(product) %>" class=" rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block">Lokationer<span class="sr-only">, GraphQL API</span></a>-->
    <%= render_contextmenu resource: punch_card, turbo_frame: "form", resource_class: PunchCard, alter: true, links: [ edit_punch_card_url(punch_card), punch_card_url(punch_card) ] %>
  </div>
</li>
