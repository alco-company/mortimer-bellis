<% content_for :head do %>

  <title><%= I18n.t("user_mailer.confirmation_instructions.title") %></title>
  <style>
  </style>
<% end %>
<% content_for :email_body do %>
  <h1 class="m-0 mb-6 text-base sm:leading-8 text-black font-semibold">
    <%= I18n.t("user_mailer.salutations", name: @name) %>
  </h1>
  <p class="m-0 leading-6">
      <%= I18n.t("user_mailer.confirmation_instructions.introduction") %>
  </p>
  <div role="separator" style="line-height: 24px">&zwj;</div>
  <div>
      <a href="<%= @confirmation_url %>" class="inline-block px-6 py-4 font-semibold no-underline rounded-sm text-base/none" style="color: #f8fafc; background-color: #0284c7">
      <!--[if mso]>
          <i class="mso-font-width-[150%]" style="mso-text-raise: 30px;" hidden="">&emsp;</i>
      <![endif]-->
      <span style="mso-text-raise: 16px">
          <%= I18n.t("user_mailer.confirmation_instructions.action") %> &rarr;
      </span>
      <!--[if mso]>
          <i class="mso-font-width-[150%]" hidden="">&emsp;&#8203;</i>
      <![endif]-->
      </a>

  </div>
  <div role="separator" class="false bg-slate-200" style="height: 1px; line-height: 1px; margin: 0; margin-top: 32px; margin-bottom: 32px">&zwj;</div>
  <p class="m-0 text-sm text-gray-500">
    <%== t("user_mailer.confirmation_instructions.ignore") %>
  </p>

  <%= render MortimerMailSignature.new %>

<% end %>
