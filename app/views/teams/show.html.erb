<div class="w-full">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="font-bold text-4xl"> <%= @resource.name %> </h1>
      <%= link_to t(".employee_status"), pos_employees_url(t: @resource.name, api_key: first_employee_token), class: "inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10", target: "_blank", data: { turbo_frame: '_top', turbo_stream: true } %>

    </div>
    <div class="grid gap-2 grid-cols-1 lg:grid-cols-2 items-center">
      <%= link_to t("#{ resource_class.table_name}.form.edit"), edit_resource_url, class: "mort-btn-primary" %>
    </div>
  </div>
  <div class="">
    <div class="ID mb-2"><strong>ID</strong><br/><%= @resource.id %></div>
    <% @resource.create_calendar if @resource.calendars.count < 1 %>
    <span class="calendar"><strong><%= t("calendars") %></strong><br/><%= link_to @resource.calendars.pluck(:name).join(", "), team_calendars_url(@resource) %></span>
    <%= render resource_class.form @resource, false %>
  </div>
  <hr>
  <div class="mt-3">
    <%= render "employees/list" %>
    <%= render @resource.employees %>
  </div>
</div>
