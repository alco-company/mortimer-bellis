<%= turbo_frame_tag "#{Current.get_user.id}_time_material_stats" do %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="shadow rounded p-4">
      <h4 class="text-xs text-gray-500 mb-1"><%= t("dashboard.stats.billed_hours") %></h4>
      <div class="flex items-center">
        <span class="mr-2 text-xl font-bold text-slate-700"><%= billed_hours %></span>
        <span class="px-2 py-0.5 bg-gray-100 text-xs text-slate-700 rounded-full"><%= billed_hours_delta %></span>
      </div>
    </div>
    <div class="shadow rounded p-4">
      <h4 class="text-xs text-gray-500 mb-1"><%= t("dashboard.stats.drafted_hours") %></h4>
      <div class="flex items-center">
        <span class="mr-2 text-xl font-bold text-slate-700"><%= drafted_hours %></span>
      </div>
    </div>
  </div>
<% end %>
