<li class="flex items-center justify-between gap-x-6 py-5" id="<%= dom_id(punch) %>">
    <div class="min-w-0 w-full grid grid-cols-5 columns-3">
      <div>
        <%= render_text_column(value: tell_state(punch), css: "truncate") %> 
      </div>
      <div class="col-span-3">
        <%= render_text_column(value: punch.comment, css: "hidden md:block truncate") %>
      </div>
      <div>
        <%= render_time_column(value: punch.punched_at, css: "text-right") %>
      </div>
    </div>
    <div class="flex flex-none items-center gap-x-4">
      <%= render PosContextmenu.new resource: punch, turbo_frame: dom_id(punch), alter: true, links: [ pos_employee_edit_url(api_key: punch.user.access_token, id: punch.id), pos_employee_delete_url(api_key: punch.user.access_token, id: punch.id)] %>
    </div>
</li>
