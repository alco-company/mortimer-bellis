<% content_for :head do %>
    <%= render partial: 'layouts/mobile_header' %>
    <meta name="screen-orientation"  content="landscape">
<% end %>

<% 

  items = [
    { title: t('.today'), url: pos_employee_url(api_key: @resource.access_token), target: "_blank", data: { turbo_frame: '_top', turbo_stream: true }, class: "mort-link-primary" },
    { title: t(".payroll_period"), url: pos_employee_url(api_key: @resource.access_token, payroll_period: true), class: "mort-link-primary" }
  ]

%>

<% content_for :nav do 
    render NavigationComponent.new( items: items)
  end %>

<% if params[:payroll_period] == "true" %>
<%= render partial: 'payroll_period' %>
<% else %>
<%= @resource.name %>
<% end %>
<%= render_mortimer_footer(request: request)  %>
