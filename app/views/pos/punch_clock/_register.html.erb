  <fieldset class="mb-6 bg-white">
    <div class=" -space-y-px rounded-none" style="font-family: 'Roboto Mono'">
      <div class="flex space-x-2 justify-center">
        <label for="employee-pincode" class="sr-only"><%= t('.employee_pincode') %></label>
        <div data-punch-clock-target="key" data-action="click->punch-clock#digitboxTap" class="text-3xl flex items-center justify-center w-14 rounded-md h-20 border border-gray-300">
        <span data-punch-clock-target="digitbox" class="hidden">0</span>
        </div>
        <div data-punch-clock-target="key" data-action="click->punch-clock#digitboxTap" class="text-3xl flex items-center justify-center w-14 rounded-md h-20 border border-gray-300">
        <span data-punch-clock-target="digitbox" class="hidden">0</span>
        </div>
        <div data-punch-clock-target="key" data-action="click->punch-clock#digitboxTap" class="text-3xl flex items-center justify-center w-14 rounded-md h-20 border border-gray-300">
