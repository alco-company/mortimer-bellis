<%= form_with(url: modal_index_url, data: { turbo: false }) do |form| %>
  <div class="sm:flex sm:items-start">
    <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
      <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
    </div>
    <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
      <%= form.hidden_field :modal_form, value: 'state' %>
      <%= form.hidden_field :resource_class, value: 'punch_card' %>
      <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal_title"> <%= t('punch_cards.modal.state_title') %></h3>
      <div class="mt-2">
        <p class="text-sm text-gray-500"> <%= t('punch_cards.modal.state_instruction') %></p>
        <%= form.label :send_state_at, t('modal.state.send_state_at') %>
        <%= form.time_field :send_state_at, autofocus: true, required: true, class: "mort-form-text" %>
      </div>
      <div class="mt-2">
        <p class="text-sm text-gray-500"> <%= t('punch_cards.modal.eu_state_instruction') %></p>
        <%= form.label :send_eu_state_at, t('modal.state.send_eu_state_at') %>
        <%= form.time_field :send_eu_state_at, autofocus: true, required: true, class: "mort-form-text" %>
      </div>
    </div>
  </div>
  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
    <%= form.button t(:order_state), class: "mort-btn-primary sm:ml-3" %>
    <%= button_tag t(:cancel), form: "dialog_form", formmethod: :dialog, class: "mort-btn-cancel" %>
  </div>
<% end %>
