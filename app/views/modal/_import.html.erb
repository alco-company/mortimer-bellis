<%= form_with(url: modal_create_url) do |form| %>
  <div class="sm:flex sm:items-start">
    <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
      <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
    </div>
    <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
      <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal_title"> <%= t("#{@resource_class.to_s.underscore}.modal.import.title") %></h3>
      <div class="mt-2">
        <p class="text-sm text-gray-500 pb-3"> <%== t("#{@resource_class.to_s.underscore}.modal.import.instruction") %></p>

        <%= form.hidden_field :modal_form, value: @modal_form %>
        <%= form.label :import_file, t("#{@resource_class.to_s.underscore}.modal.import.file"), class: "" %>
        <%= form.file_field :import_file, autofocus: true, required: true, disabled: true, class: "mort-form-text py-3" %>
:attachments, accepted_file_types: "text/csv"
        <div class="relative flex items-start mt-3">
          <div class="ml-3 text-sm leading-6">
            <label for="import_model" class="font-medium text-gray-900"><%= t("#{@resource_class.to_s.underscore}.modal.import.label") %></label>
            <p id="comments-description" class="text-gray-500"><%= t("#{@resource_class.to_s.underscore}.modal.import.description") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
    <%= form.button t("#{@resource_class.to_s.underscore}.modal.import.button"), class: "mort-btn-primary sm:ml-3" %>
    <%= button_tag t(:cancel), form: "dialog_form", formmethod: :dialog, class: "mort-btn-cancel" %>
  </div>
<% end %>
