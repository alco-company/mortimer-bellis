<%- if controller_name == 'sessions' %>
  <%= button_to I18n.t("devise.sign_in_with", provider: "EntraID"), "/auth/entra_id", method: :post, class: "mort-btn-primary", data: { turbo: false } %>
  <hr class="my-2">
<% end  %>

<%= link_to I18n.t("need_help"), help_pages_url(locale: I18n.locale), class: "mort-link-primary", data: { turbo_frame: "_top"} %>
<hr class="my-2">
<% params[:locale]="da" %>
<%= link_to I18n.t('danish'), url_for(params.permit!), class: "mort-link-primary" , data: { turbo_frame: "_top"} if I18n.locale != :da %>
<% params[:locale]="en" %>
<%= link_to I18n.t('english'), url_for(params.permit!), class: "mort-link-primary" , data: { turbo_frame: "_top"} if I18n.locale != :en %>
<% params[:locale]=I18n.locale %>
