<% content_for :head do %>

  <title><%= I18n.t("tenant.mailer.restore.page_title") %></title>
  <style>
  </style>
<% end %>
<% content_for :email_body do %>
  <h1 class="m-0 mb-6 text-base sm:leading-8 text-black font-semibold">
    <%= I18n.t("tenant.mailer.salutations", name: @tenant.name) %>
  </h1>
  <p class="m-0 leading-6">
      Your tenant backup has been successfully restored from archive: <strong><%= @archive %></strong>
  </p>
  <br>
  <% if @pdf_report_url.present? %>
    <p class="m-0 leading-6">
      <strong>Download PDF Report:</strong>
      <a href="<%= @pdf_report_url %>">Restore Report PDF</a>
    </p>
    <br>
  <% end %>
  <div role="separator" class="false bg-slate-200" style="height: 1px; line-height: 1px; margin: 0; margin-top: 32px; margin-bottom: 32px">&zwj;</div>
  <%= render MortimerMailSignature.new %>
<% end %>
