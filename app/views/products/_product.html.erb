<li id="<%= dom_id product %>" class="flex items-center justify-between gap-x-6 py-5">
  <div class="min-w-0 w-full columns-2 md:columns-4 lg:columns-5 xl:columns-8">
    <%= render_text_column value: show_resource_link(resource: product), css: "truncate mort-link-primary" do |value| %>
      <%= value %>
      <% if global_queries? Current.user %>
        <p class="text-xs"><%= show_resource_link(resource: product.tenant) %> </p>
      <% end %>
    <% end %>
    <%= render_text_column value: product.product_number, css: "hidden lg:block truncate" %>
    <%= render_text_column value: product.quantity, css: "hidden md:block truncate" %>
    <%= render_text_column value: product.unit, css: "truncate" %>
    <%= render_text_column value: product.base_amount_value, css: "hidden xl:block truncate" %>
    <%= render_text_column value: product.account_number, css: "hidden xl:block truncate" %>
    <%= render_text_column value: product.external_reference, css: "hidden xl:block truncate" %>
    <%= render_datetime_column value: product.updated_at, css: "hidden md:block" %>
  </div>
  <div class="flex flex-none items-center gap-x-4 ">
<!--    <a href="<%#= product_stock_items_url(product) %>" class=" rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block">Lokationer<span class="sr-only">, GraphQL API</span></a>-->
    <%= render_contextmenu resource: product, turbo_frame: "form", resource_class: Product, alter: true, links: [ edit_product_url(product), product_url(product) ] %>
  </div>
</li>
